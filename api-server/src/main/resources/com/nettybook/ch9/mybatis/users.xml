<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="users">
	<select id="userList" resultType="map">
		SELECT * FROM USERS
	</select>
	
	<select id="userInfoByEmail" parameterType="map" resultType="map">
		SELECT UIDX, USRID, USRNAME, UPWD FROM NETTYBOOK_EXAMPLE_DB.USERS WHERE USRID = #{email}
	</select>
	
	<select id="userInfoByPassword" parameterType="map" resultType="map">
		SELECT UIDX, USRID, UPWD FROM NETTYBOOK_EXAMPLE_DB.USERS WHERE UIDX = #{uIdx} AND UPWD = #{uPwd}
	</select>
</mapper>

<!-- 
	UIDX INT GENERATED BY DEFAULT AS IDENTITY (START WITH 1, INCREMENT BY 1) NOT NULL,
    USRID VARCHAR(45) NOT NULL,
	USRNAME VARCHAR(45) NOT NULL,
	UPWD VARCHAR(45) NOT NULL,
 -->